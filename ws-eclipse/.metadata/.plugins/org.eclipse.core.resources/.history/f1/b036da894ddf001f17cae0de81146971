package defaul;

import java.util.Locale;

public class Main {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		
		String product1 = "Computer";
		String product2 = "Office desk";
		
		int age = 30;
		int code = 5290;
		char gender = 'F';
		
		double price1 = 2100.0;
		double price2 = 650.50;
		double measure = 53.234567;
		Locale.setDefault(Locale.US);
		
		
		System.out.printf(" Products:%n " + product1 + ", which price is $ %.2f "+ price1 + " %n " + product2 + ", which price is $ " + price2+ "%n %n Record: "+age+" years old, code "+code+" and gender: "+gender+ "%n %n Measue with eight decimal places: "+measure+"%n Rouded (Three decimal places): %.3f", measure, "%n US decimal point: %.3f");
		
	}

}
	